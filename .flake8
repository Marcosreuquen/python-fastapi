[flake8]
max-line-length = 88
ignore = E203, E266, E501, W503
exclude = .git,
          __pycache__,
          docs/source/conf.py,
          old,
          build,
          dist,
          alembic,
          venv
per-file-ignores =
    # F811: redefinition of unused name
    */__init__.py: F811

[pep8]
max-line-length = 88

[pycodestyle]
max-line-length = 88

[pylint]
max-line-length = 88
